{
  "connection": "default",
  "collectionName": "hdreports",
  "info": {
    "name": "hdreport",
    "description": "Journal events and user reports for the Unknown Signal Sources"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "fromSystemName": {
      "type": "string",
      "required": true
    },
    "toSystemName": {
      "type": "string",
      "required": true
    },
    "cmdrName": {
      "type": "string",
      "required": true
    },
    "cmdrComment": {
      "type": "text"
    },
    "screenshot": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "isBeta": {
      "default": false,
      "type": "boolean"
    },
    "reportStatus": {
      "default": "pending",
      "type": "enumeration",
      "required": true,
      "enum": [
        "pending",
        "updated",
        "verified",
        "accepted",
        "declined",
        "issue"
      ]
    },
    "reportComment": {
      "type": "text"
    },
    "added": {
      "default": false,
      "type": "boolean"
    },
    "site": {
      "model": "hdsite"
    },
    "hdRawJson": {
      "type": "json"
    }
  }
}
