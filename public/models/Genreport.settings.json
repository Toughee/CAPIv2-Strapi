{
  "connection": "default",
  "collectionName": "genreports",
  "info": {
    "name": "genreport",
    "description": "Reporting for Generation Ships"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "systemName": {
      "type": "string",
      "required": true
    },
    "orbitBody": {
      "type": "string"
    },
    "shipName": {
      "type": "string",
      "required": true
    },
    "directionSystem": {
      "type": "string"
    },
    "distance": {
      "type": "float"
    },
    "cmdrName": {
      "type": "string",
      "required": true
    },
    "cmdrComment": {
      "type": "text"
    },
    "screenshot": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "reportStatus": {
      "enum": [
        "pending",
        "updated",
        "accepted",
        "declined",
        "issue"
      ],
      "type": "enumeration",
      "required": true
    },
    "reportComment": {
      "type": "text"
    },
    "voteCount": {
      "type": "integer"
    },
    "added": {
      "type": "boolean"
    },
    "site": {
      "model": "gensite"
    }
  }
}
