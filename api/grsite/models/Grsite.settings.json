{
  "connection": "default",
  "collectionName": "grsites",
  "info": {
    "name": "grsite",
    "description": "Guardian Ruin site"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "location": {
      "model": "location",
      "via": "grSite"
    },
    "siteID": {
      "unique": true,
      "min": 1,
      "type": "integer",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float",
      "required": true
    },
    "type": {
      "model": "grtype"
    },
    "verified": {
      "type": "boolean"
    },
    "visible": {
      "default": true,
      "type": "boolean"
    },
    "activeGroups": {
      "collection": "gractivegroup",
      "via": "grSite"
    },
    "activeObelisks": {
      "collection": "gractiveobelisk",
      "via": "grSite"
    }
  }
}