{
  "connection": "default",
  "collectionName": "mssites",
  "info": {
    "name": "mssite",
    "description": "Mega-Ship sites"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "system": {
      "model": "system"
    },
    "body": {
      "model": "body"
    },
    "siteID": {
      "unique": true,
      "min": 1,
      "type": "integer",
      "required": true
    },
    "shipName": {
      "unique": true,
      "type": "string",
      "required": true
    },
    "shipTag": {
      "unique": true,
      "type": "string",
      "required": true
    },
    "type": {
      "model": "mstype"
    },
    "flightOps": {
      "type": "boolean",
      "required": true
    },
    "flightSchedule": {
      "type": "boolean",
      "required": true
    },
    "dockable": {
      "type": "boolean",
      "required": true
    },
    "discoveredBy": {
      "model": "cmdr"
    },
    "msschedules": {
      "collection": "msschedule",
      "via": "mssite"
    }
  }
}
