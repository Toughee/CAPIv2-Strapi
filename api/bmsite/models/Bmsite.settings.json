{
  "connection": "default",
  "collectionName": "bmsites",
  "info": {
    "name": "BM Site"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "system": {
      "model": "system",
      "via": "bmsites"
    },
    "body": {
      "model": "body",
      "via": "bmsites"
    },
    "siteID": {
      "unique": true,
      "min": 1,
      "type": "integer",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float",
      "required": true
    },
    "type": {
      "model": "bmtype"
    },
    "frontierID": {
      "type": "integer"
    },
    "verified": {
      "type": "boolean"
    },
    "visible": {
      "default": true,
      "type": "boolean"
    },
    "discoveredBy": {
      "model": "cmdr"
    }
  }
}
