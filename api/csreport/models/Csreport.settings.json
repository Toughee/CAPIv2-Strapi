{
  "connection": "default",
  "collectionName": "csreports",
  "info": {
    "name": "csreport",
    "description": "Reporting for Crystalline Shards"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "userType": {
      "default": "console",
      "type": "enumeration",
      "required": true,
      "enum": [
        "console",
        "pc"
      ]
    },
    "reportType": {
      "default": "new",
      "type": "enumeration",
      "required": true,
      "enum": [
        "new",
        "update",
        "error"
      ]
    },
    "systemName": {
      "type": "string",
      "required": true
    },
    "systemAddress": {
      "type": "float"
    },
    "regionID": {
      "type": "integer"
    },
    "coordX": {
      "type": "float"
    },
    "coordY": {
      "type": "float"
    },
    "coordZ": {
      "type": "float"
    },
    "bodyName": {
      "type": "string",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true,
      "min": -90,
      "max": 90
    },
    "longitude": {
      "type": "float",
      "required": true,
      "min": -180,
      "max": 180
    },
    "count": {
      "min": 1,
      "type": "integer"
    },
    "cmdrName": {
      "type": "string",
      "required": true
    },
    "cmdrComment": {
      "type": "text"
    },
    "isBeta": {
      "default": false,
      "type": "boolean"
    },
    "screenshot": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "reportStatus": {
      "default": "pending",
      "type": "enumeration",
      "required": true,
      "enum": [
        "pending",
        "updated",
        "verified",
        "accepted",
        "declined",
        "issue"
      ]
    },
    "reportComment": {
      "type": "text"
    },
    "voteCount": {
      "type": "integer"
    },
    "added": {
      "default": false,
      "type": "boolean"
    },
    "site": {
      "model": "cssite"
    }
  }
}
