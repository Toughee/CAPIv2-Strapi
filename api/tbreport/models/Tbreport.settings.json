{
  "connection": "default",
  "collectionName": "tbreports",
  "info": {
    "name": "tbreport",
    "description": "Reporting for Thargoid Barnacles"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "systemName": {
      "type": "string",
      "required": true
    },
    "bodyName": {
      "type": "string",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true,
      "min": -90,
      "max": 90
    },
    "longitude": {
      "type": "float",
      "required": true,
      "min": -180,
      "max": 180
    },
    "type": {
      "enum": [
        "Barnacle",
        "Megabarnacle"
      ],
      "type": "enumeration",
      "required": true
    },
    "cycle": {
      "enum": [
        "Unknown",
        "A",
        "B",
        "C",
        "ABC"
      ],
      "type": "enumeration",
      "required": true
    },
    "defence": {
      "type": "json"
    },
    "count": {
      "min": 1,
      "type": "integer"
    },
    "cmdrName": {
      "type": "string",
      "required": true
    },
    "cmdrComment": {
      "type": "text"
    },
    "isBeta": {
      "type": "boolean"
    },
    "screenshot": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "reportStatus": {
      "default": "pending",
      "type": "enumeration",
      "required": true,
      "enum": [
        "pending",
        "updated",
        "accepted",
        "declined",
        "issue"
      ]
    },
    "reportComment": {
      "type": "text"
    },
    "voteCount": {
      "type": "integer"
    },
    "added": {
      "type": "boolean"
    },
    "site": {
      "model": "tbsite"
    }
  }
}
