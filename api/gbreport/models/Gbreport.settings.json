{
  "connection": "default",
  "collectionName": "gbreports",
  "info": {
    "name": "gbreport",
    "description": "Reporting for Guardian Beacons"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "userType": {
      "default": "console",
      "type": "enumeration",
      "required": true,
      "enum": ["console", "pc"]
    },
    "reportType": {
      "default": "new",
      "type": "enumeration",
      "required": true,
      "enum": ["new", "update", "error"]
    },
    "systemName": {
      "type": "string",
      "required": true
    },
    "systemAddress": {
      "type": "biginteger"
    },
    "regionID": {
      "type": "integer"
    },
    "coordX": {
      "type": "float"
    },
    "coordY": {
      "type": "float"
    },
    "coordZ": {
      "type": "float"
    },
    "bodyName": {
      "default": "",
      "type": "string"
    },
    "messageSystem": {
      "default": "",
      "type": "string",
      "required": false
    },
    "messageBody": {
      "default": "",
      "type": "string",
      "required": false
    },
    "messageLatitude": {
      "default": "",
      "max": 90,
      "min": -90,
      "type": "float",
      "required": false
    },
    "messageLongitude": {
      "default": "",
      "max": 180,
      "min": -180,
      "type": "float",
      "required": false
    },
    "cmdrName": {
      "type": "string",
      "required": true
    },
    "cmdrComment": {
      "type": "text"
    },
    "isBeta": {
      "default": false,
      "type": "boolean"
    },
    "clientVersion": {
      "required": true,
      "type": "string"
    },
    "screenshot": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "reportStatus": {
      "default": "pending",
      "type": "enumeration",
      "required": true,
      "enum": [
        "pending",
        "updated",
        "verified",
        "accepted",
        "declined",
        "issue",
        "duplicate"
      ]
    },
    "reportComment": {
      "default": "",
      "type": "text"
    },
    "voteCount": {
      "min": 1,
      "type": "integer"
    },
    "added": {
      "default": false,
      "type": "boolean"
    },
    "site": {
      "model": "gbsite"
    }
  }
}
