{
  "connection": "default",
  "collectionName": "nhssreports",
  "info": {
    "name": "nhssreport",
    "description": "Automated journal reports for Non-Human Signal Sources"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "systemName": {
      "type": "string"
    },
    "threatLevel": {
      "min": 1,
      "max": 10,
      "type": "integer"
    },
    "cmdrName": {
      "type": "string"
    },
    "cmdrComment": {
      "type": "text"
    },
    "isBeta": {
      "default": false,
      "type": "boolean"
    },
    "clientVersion": {
      "required": true,
      "type": "string"
    },
    "reportStatus": {
      "default": "pending",
      "type": "enumeration",
      "required": true,
      "enum": [
        "pending",
        "updated",
        "verified",
        "accepted",
        "declined",
        "issue"
      ]
    },
    "reportComment": {
      "type": "text"
    },
    "added": {
      "default": false,
      "type": "boolean"
    },
    "site": {
      "model": "nhsssite"
    },
    "nhssRawJson": {
      "type": "json"
    }
  }
}
